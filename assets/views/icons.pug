extends _layout

block content

	style.
		.icons {
		  padding: 1.5rem;
		}
		.icon-box {
			padding: 1.5rem;
			margin: 0.7rem;
			border: 1px solid lightgray;
			display: inline-block;
			font-size: 1.5rem;
			line-height: 0;
			border-radius: 4px;
			box-shadow: 0 0 3px rgba(0,0,0,0.15);
			color: #222;
			background-color: #fff;
		}

		.icon-box:hover {
			color: #fff;
			background-color: #222;
		}


	.icons
		each i in icons
			.icon-box(title=`icon_${i}`)
				+icon({name: i})
